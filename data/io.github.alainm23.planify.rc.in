#include <windows.h>  // Required for versioning macros

IDI_ICON1 ICON "../../data/icons/io.github.alainm23.planify.ico"

VS_VERSION_INFO VERSIONINFO
 FILEFLAGSMASK 0x3fL
 FILEVERSION @version@
 PRODUCTVERSION @version@
 FILEFLAGS 0x0L
 FILEOS VOS_NT_WINDOWS32
 FILETYPE VFT_APP
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904B0"  // Language (English - United States)
        BEGIN
            VALUE "ProductName", "Planify"
            VALUE "ProductVersion", "@version@"
            VALUE "FileVersion", "@version@"
            VALUE "FileDescription", "Planify - Forget about forgetting things"
            VALUE "CompanyName", "Alain"
            VALUE "LegalCopyright", "GPL-3.0+ License"
            VALUE "OriginalFilename", "io.github.alainm23.planify.exe"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 1200  // English (US)
    END
END
